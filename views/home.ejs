<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<div class="container mt-4">
  <h1 class="mb-4"> <%= title %> </h1>

  <div class="row">
    <div class="col-md-8">
      <section id="feed-posts">
        <h4>Posts</h4>
        <% if(locals.user) { %>
          <form action="/posts/create" id="new-post-form" method="POST" class="mb-3">
            <div class="form-group">
              <textarea class="form-control" name="content" cols="30" rows="5" placeholder="Type here...." required></textarea>
            </div>
            <input type="submit" value="POST" class="btn btn-primary" />
          </form>
        <% } %>

        <div id="posts-list-container">
          <ul class="list-unstyled">
            <% for(post of posts){ %>

              <%- include('_post') -%>

            <% } %>
          </ul>
        </div>
      </section>
    </div>

    <div class="col-md-4">
      <section id="user-friends" class="mt-4 mt-md-0">
        <h4>Friends</h4>
        <div class="list-group">
          <% for(u of all_users) {%>
            <a href="/users/profile/<%= u.id%>" class="list-group-item list-group-item-action"><%= u.name %></a>
          <% } %>
        </div>
      </section>
    </div>
  </div>
</div>

<script src="/js/home_posts.js"></script>
